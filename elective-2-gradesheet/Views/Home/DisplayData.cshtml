@model IEnumerable<GradeRecordViewModel>

@{
    ViewData["Title"] = "Uploaded Grade Data";
}

<div class="container mt-5">
    <h2 class="mb-4">Uploaded Gradebook Data</h2>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Email</th>
                        <th>Activity Name</th>
                        <th>Status</th>
                        <th>Points</th>
                        <th>Max Points</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LastName</td>
                            <td>@item.FirstName</td>
                            <td>@item.Email</td>
                            <td>@item.ActivityName</td>
                            <td>@item.Status</td>
                            <td>@item.Points</td>
                            <td>@item.MaxPoints</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No data was found in the uploaded file, or the file format was incorrect.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Upload Another File</a>
    </div>
</div>
