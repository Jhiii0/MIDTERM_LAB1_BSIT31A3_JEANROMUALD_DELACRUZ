@using elective_2_gradesheet.Data.Entities
@model CsvDisplayViewModel


@{
    ViewData["Title"] = "CSV Importer";
    var sections = ViewBag.Sections as IEnumerable<SelectListItem>;
}

<div class="container mt-5">
    <div class="text-end mb-3">
        <a asp-action="Records" class="btn btn-info">View All Saved Records</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-12">
            <!-- Upload Form Section -->
            <div class="card shadow-sm mb-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center mb-0">Upload Gradebook CSV</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }

                    <form asp-controller="Home" asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="row align-items-end">
                            <!-- File Input -->
                            <div class="col-md-5">
                                <div class="form-group mb-3">
                                    <label for="file" class="form-label">Select CSV File:</label>
                                    <input type="file" name="file" class="form-control" accept=".csv" required />
                                </div>
                            </div>
                            <!-- Section Dropdown -->
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="SectionId" class="form-label">Select Section:</label>
                                    <select asp-for="SectionId" asp-items="sections" class="form-control" required>
                                        <option value="">-- Select Section --</option>
                                    </select>
                                </div>
                            </div>
                            <!-- Grading Period Dropdown -->
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    <label asp-for="GradingPeriod" class="form-label">Select Period:</label>
                                    <select asp-for="GradingPeriod" asp-items="Html.GetEnumSelectList<GradingPeriod>()" class="form-control" required></select>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid mt-2">
                            <button type="submit" class="btn btn-primary">Upload and Save Data</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Display Data Section -->
            @if (Model != null && Model.GradeRecords.Any())
            {
                <h2 class="mb-4">Processed Gradebook Data</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Tag</th>
                                <th>Last Name</th>
                                <th>First Name</th>
                                <th>Email</th>
                                <th>Activity Name</th>
                                <th>Status</th>
                                <th>Points</th>
                                <th>Max Points</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GradeRecords)
                            {
                                <tr>
                                    <td><span class="badge bg-info text-dark">@Model.GradingPeriod.ToString()</span></td>
                                    <td>@item.LastName</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.Email</td>
                                    <td>@item.ActivityName</td>
                                    <td>@item.Status</td>
                                    <td>@item.Points</td>
                                    <td>@item.MaxPoints</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
