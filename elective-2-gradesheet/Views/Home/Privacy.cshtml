@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-lg">
        <div class="card-header text-white py-2 rounded-top-lg" style="background-color: #36454F;">
            <h4 class="mb-0"><i class="fas fa-shield-alt me-2"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body p-4">
            <p>Use this page to detail your site's privacy policy.</p>
            <p class="text-muted small">
                This application is designed for educational purposes and demonstrates basic data management.
                No sensitive personal data is collected or stored beyond what is necessary for its intended function.
                For any concerns, please contact the administrator.
            </p>
        </div>
    </div>
</div>
